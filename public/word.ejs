    <table>
        <tr>
        <% data.hiragana.forEach((x) => {%>
            <td draggable="true"></td>
        <% }) %>
        </tr>
    </table>
    <br/>
    <table>
        <tr>
        <% for(var i = 0; i < Math.ceil(hiragana.length/2); i++) { %>
            <td draggable="true"><%=hiragana[i]%></td>
        <% } %>
        </tr>
        <tr>
        <% for(var i = Math.ceil(hiragana.length/2); i < hiragana.length; i++) { %>
            <td draggable="true"><%=hiragana[i]%></td>
        <% } %>
        </tr>
    </table>
</body>
</html>